<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingHorizontal="10dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" >

            <ImageButton
                android:id="@+id/b1"
                style="@android:style/Widget.DeviceDefault.ImageButton"
                android:layout_width="150dp"

                android:layout_height="150dp"
                android:layout_margin="15dp"
                android:onClick="imgSelect"
                android:scaleType="fitCenter"
                android:src="@drawable/tray" />

            <ImageButton
                android:id="@+id/b2"
                style="@android:style/Widget.DeviceDefault.ImageButton"
                android:layout_width="150dp"

                android:layout_height="150dp"
                android:layout_margin="15dp"
                android:onClick="imgSelect"
                android:scaleType="fitCenter"
                android:src="@drawable/foil" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:id="@+id/b3"
                style="@android:style/Widget.DeviceDefault.ImageButton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="15dp"
                android:onClick="imgSelect"
                android:scaleType="fitCenter"
                android:src="@drawable/handmixer" />

            <ImageButton
                android:id="@+id/b4"
                style="@android:style/Widget.DeviceDefault.ImageButton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="15dp"
                android:onClick="imgSelect"
                android:scaleType="fitCenter"
                android:src="@drawable/spatula" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:id="@+id/b5"
                style="@android:style/Widget.DeviceDefault.ImageButton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="15dp"
                android:onClick="imgSelect"
                android:scaleType="fitCenter"
                android:src="@drawable/flour" />

            <ImageButton
                android:id="@+id/b6"
                style="@android:style/Widget.DeviceDefault.ImageButton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="15dp"
                android:onClick="imgSelect"
                android:scaleType="fitCenter"
                android:src="@drawable/cheese" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:id="@+id/b7"
                style="@android:style/Widget.DeviceDefault.ImageButton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="15dp"
                android:onClick="imgSelect"
                android:scaleType="fitCenter"
                android:src="@drawable/chocochip" />

            <ImageButton
                android:id="@+id/b8"
                style="@android:style/Widget.DeviceDefault.ImageButton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="15dp"
                android:onClick="imgSelect"
                android:scaleType="fitCenter"
                android:src="@drawable/chocolate" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/check" />

            <Button
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/cancel" />
        </TableRow>

    </TableLayout>

</ScrollView>